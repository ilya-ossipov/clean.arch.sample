<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_info.presentation.screen.UserInfoActivity"
    >

    <io.example.sample.user_info.presentation.card_view.DefaultUserInfoCardView
        android:id="@+id/user_info_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        card_view:cardBackgroundColor="@color/appWhite"
        card_view:cardElevation="2dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>